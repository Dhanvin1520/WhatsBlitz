{
  "manifest_version": 3,
  "name": "WhatsApp Message Sender",
  "version": "1.0",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"]
    }
  ]
}